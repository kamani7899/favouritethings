<p id="notice"><%= notice %></p>
<h1>Listing Players</h1>
<div class ="media">
<div class ="media-body">
<table class ="table table-hover">

  <thead>
    <tr>
      <th>Jersey</th>
      <th>Name</th>
      <th>Manager</th>
      <th>Status</th>
      <th>Quality</th>
      <th>Contract</th>
      <th>Club</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.jersey %></td>
        <td><%= player.name %></td>
        <td><%= player.manager %></td>
        <td><%= player.status %></td>
         <td><%= player.quality %></td>
        <td><%= player.contract %></td>
        <td><%= player.club %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
</div>
</div>
<br>
<h3> Import Players </h3>
<%= form_tag import_players_path, multipart: true do %>
<%= file_field_tag :file%>
<%= submit_tag "Upload Players" %>
<% end %>
<h3> Download Players</h3>
<%= link_to "Report", players_path(format: "csv"), class: 'btn btn-primary' %>
<%= link_to 'New Player', new_player_path, class: 'btn btn-success' %>
