<div class="row">
  <%= form_for(@player, html: {multipart: true}) do |f| %>
    <% if @player.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

        <ul>
        <% @player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :jersey %><br>
      <div class="controls">
      <%= f.number_field :jersey, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name, class: 'control-label' %><br>
      <div class="controls">
      <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :manager, class: 'control-label' %><br>
      <div class="controls">
      <%= f.text_field :manager, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :status, class: 'control-label' %><br>
      <div class="controls">
      <%= f.text_field :status, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :contract, class: 'control-label' %><br>
      <div class="controls">
      <%= f.number_field :contract, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :club, class: 'control-label' %><br>
      <div class="controls">
      <%= f.text_field :club, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
    <%= f.label "Quality", class: 'control-label' %>
    <div class="controls">
      <%= f.select(:quality, options_for_select([['POOR','POOR'],['Average','Average'],['good','good'],['very good','very good'],['Excellent','Excellent']])) %>
    </div>
    </div>
    </br>
    <div class="form-group">
      <div class="controls">
        <%= f.submit %>
      </div>
    </div>
  <% end %>
</div>